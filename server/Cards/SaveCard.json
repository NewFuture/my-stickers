{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "$data": "${Imgs}",
                    "altText": "${alt}",
                    "horizontalAlignment": "center",
                    "url": "${src}",
                    "height": "auto",
                    "msTeams": {
                        "allowExpand": true
                    },
                    "separator": false,
                    "type": "Image"
                }
            ]
        }
    ]
}
