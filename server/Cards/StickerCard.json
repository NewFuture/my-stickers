{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "minHeight": "150px",
    "verticalContentAlignment": "center",
    "body": [
        {
            "altText": "${alt}",
            "horizontalAlignment": "center",
            "url": "${src}",
            "height": "auto",
            "msTeams": {
                "allowExpand": true
            },
            "separator": false,
            "type": "Image"
        }
    ]
}
